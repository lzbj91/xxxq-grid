<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.xxxq_grid.SupplierServiceEvaluationHasListActivity">

    <com.example.administrator.common.HeaderBar
        android:id="@+id/headerBar"
        android:layout_width="match_parent"
        android:layout_height="64dp">

    </com.example.administrator.common.HeaderBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/supplier_evaluation_bg"
        android:orientation="vertical"
        android:padding="@dimen/fifteen">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/thirty"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_supplier_service_evaluation_has_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/ten"
                android:minWidth="@dimen/fifty"
                android:textSize="16sp"
                tools:background="#fff0f0f0" />

            <RatingBar
                android:id="@+id/activity_supplier_service_evaluation_has_list_rating"
                style="@style/foodRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/eight"
                android:layout_marginTop="@dimen/ten"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="3.5" />

            <TextView
                android:id="@+id/activity_supplier_service_evaluation_has_list_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/five"
                android:minWidth="@dimen/fifty"
                android:textSize="12sp"
                tools:background="#fff0f0f0" />

        </LinearLayout>

        <TextView
            android:id="@+id/activity_supplier_service_evaluation_has_list_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten"
            android:minWidth="@dimen/fifty"
            android:textColor="#999999"
            android:textSize="12sp"
            tools:background="#fff0f0f0" />

        <TextView
            android:id="@+id/activity_supplier_service_evaluation_has_list_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/fifty"
            android:textColor="#999999"
            android:textSize="12sp"
            tools:background="#fff0f0f0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twenty"
            android:background="@mipmap/main_customlist_item_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_supplier_service_evaluation_has_list_evaluation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sixty"
                android:gravity="center"
                android:minWidth="@dimen/fifty"
                android:paddingTop="@dimen/twenty"
                tools:background="#fff0f0f0" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/fifteen"
                android:layout_marginRight="@dimen/fifteen"
                android:background="#EAEAEA" />

            <com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/activity_supplier_service_evaluation_has_list_refresh_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/five"
                android:layout_marginLeft="@dimen/five"
                android:background="#ffffff">

                <ListView
                    android:id="@+id/activity_supplier_service_evaluation_has_list_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/ten"
                    android:divider="@null"></ListView>
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
