<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_common">

    <ImageView
        android:id="@+id/adapter_home_news_list_avatar"
        android:layout_width="@dimen/eighty"
        android:layout_height="@dimen/sixty"
        android:layout_marginEnd="@dimen/padding_common"
        android:layout_marginRight="@dimen/padding_common"
        android:scaleType="fitXY"
        android:layout_gravity="center_vertical"
        tools:background="#fff0f0f0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/adapter_home_news_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:minWidth="@dimen/fifty"
            tools:background="#fff0f0f0"
            android:ellipsize="end"
            android:textSize="15sp"
            android:layout_marginTop="@dimen/three"/>

        <TextView
            android:id="@+id/adapter_home_news_list_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/three"
            android:lines="2"
            android:ellipsize="end"
            android:textSize="12sp"
            tools:background="#fff0f0f0" />

        <TextView
            android:id="@+id/adapter_home_news_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textSize="10sp"
            android:layout_marginTop="@dimen/three"
            tools:background="#fff0f0f0" />

    </LinearLayout>

</LinearLayout>

