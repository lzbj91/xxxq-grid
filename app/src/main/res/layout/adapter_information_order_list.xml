<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--底部的文字布局-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fifteen"
        android:layout_marginRight="@dimen/fifteen"
        android:background="@mipmap/main_customlist_item_bg"
        android:padding="@dimen/fifteen">

        <ImageView
            android:id="@+id/adapter_information_order_list_img"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:src="@drawable/worker" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/fifteen"
            android:layout_toRightOf="@id/adapter_information_order_list_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/adapter_information_order_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="三小时家政服务" />

            <TextView
                android:id="@+id/adapter_information_order_list_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/three"
                android:lines="1"
                android:maxWidth="200dp"
                android:textColor="#999999"
                android:textSize="10sp" />

        </LinearLayout>


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/fifteen"
            android:columnCount="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:text="最新订单数: "
                android:textSize="10sp" />

            <TextView
                android:id="@+id/adapter_information_order_list_order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:minWidth="@dimen/twenty"
                android:text="200"
                android:textColor="#30C7B2"
                android:textSize="10sp"
                tools:background="#fff0f0f0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:text="完成: "
                android:textSize="10sp" />

            <TextView
                android:id="@+id/adapter_information_order_list_sale_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:minWidth="@dimen/twenty"
                android:text="200"
                android:textColor="#30C7B2"
                android:textSize="10sp"
                tools:background="#fff0f0f0" />
        </GridLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/adapter_information_order_list_img"
            android:layout_marginTop="@dimen/ten"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更新时间: "
                android:textColor="#999999"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/adapter_information_order_list_update_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018年3月29日 15:03:05"
                android:textColor="#999999"
                android:textSize="10sp" />
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
