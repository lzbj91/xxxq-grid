<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.xxxq_grid.IntegralExchangeOrderActivity">

    <com.example.administrator.common.HeaderBar
        android:id="@+id/headerBar"
        android:layout_width="match_parent"
        android:layout_height="64dp">

    </com.example.administrator.common.HeaderBar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fifteen"
                android:background="@mipmap/main_customlist_item_bg"
                android:padding="@dimen/fifteen">

                <ImageView
                    android:id="@+id/activity_integral_exchange_order_pic"
                    android:layout_width="@dimen/eighty"
                    android:layout_height="@dimen/sixty"
                    android:scaleType="fitXY"
                    tools:background="#fff0f0f0"/>

                <TextView
                    android:id="@+id/activity_integral_exchange_order_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twenty"
                    android:layout_toRightOf="@id/activity_integral_exchange_order_pic"
                    android:minWidth="@dimen/fifty"
                    tools:background="#fff0f0f0"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/activity_integral_exchange_order_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_integral_exchange_order_title"
                    android:layout_marginLeft="@dimen/twenty"
                    android:layout_marginTop="@dimen/five"
                    android:layout_toRightOf="@id/activity_integral_exchange_order_pic"
                    android:text="卡号: "
                    android:minWidth="@dimen/fifty"
                    tools:background="#fff0f0f0"
                    android:textColor="#999999"
                    android:textSize="12sp" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/ten"
                android:background="#EAEAEA" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/fifteen"
                android:text="订单信息" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/ten"
                android:background="#EAEAEA" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/fifteen"
                android:paddingRight="@dimen/fifteen"
                android:paddingTop="@dimen/five">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单号: " />

                <TextView
                    android:id="@+id/activity_integral_exchange_order_order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fifteen"
                    android:minWidth="@dimen/fifty"
                    tools:background="#fff0f0f0"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/fifteen"
                android:paddingRight="@dimen/fifteen"
                android:paddingTop="@dimen/five">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="兑换时间: " />

                <TextView
                    android:id="@+id/activity_integral_exchange_order_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fifteen"
                    android:minWidth="@dimen/fifty"
                    tools:background="#fff0f0f0"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/fifteen"
                android:paddingRight="@dimen/fifteen"
                android:paddingTop="@dimen/five">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有效日期: " />

                <TextView
                    android:id="@+id/activity_integral_exchange_order_time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fifteen"
                    android:minWidth="@dimen/fifty"
                    tools:background="#fff0f0f0"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/fifteen"
                android:paddingRight="@dimen/fifteen"
                android:paddingTop="@dimen/five">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数量: " />

                <TextView
                    android:id="@+id/activity_integral_exchange_order_count_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fifteen"
                    android:minWidth="@dimen/fifty"
                    tools:background="#fff0f0f0"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/five"
                android:paddingLeft="@dimen/fifteen"
                android:paddingRight="@dimen/fifteen"
                android:paddingTop="@dimen/five">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分: " />

                <TextView
                    android:id="@+id/activity_integral_exchange_order_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fifteen"
                    android:minWidth="@dimen/fifty"
                    tools:background="#fff0f0f0"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/ten"
                android:background="#EAEAEA" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/fifteen"
                android:text="联系人信息" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/ten"
                android:background="#EAEAEA" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/fifteen"
                android:paddingRight="@dimen/fifteen"
                android:paddingTop="@dimen/five">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名: " />

                <TextView
                    android:id="@+id/activity_integral_exchange_order_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fifteen"
                    android:minWidth="@dimen/fifty"
                    tools:background="#fff0f0f0"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/fifteen"
                android:paddingRight="@dimen/fifteen"
                android:paddingTop="@dimen/five">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年龄: " />

                <TextView
                    android:id="@+id/activity_integral_exchange_order_user_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fifteen"
                    android:minWidth="@dimen/fifty"
                    tools:background="#fff0f0f0"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/fifteen"
                android:paddingRight="@dimen/fifteen"
                android:paddingTop="@dimen/five">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="网辖管理: " />

                <TextView
                    android:id="@+id/activity_integral_exchange_order_grid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fifteen"
                    android:minWidth="@dimen/fifty"
                    tools:background="#fff0f0f0"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/fifteen"
                android:paddingRight="@dimen/fifteen"
                android:paddingTop="@dimen/five">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号: " />

                <TextView
                    android:id="@+id/activity_integral_exchange_order_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fifteen"
                    android:minWidth="@dimen/fifty"
                    tools:background="#fff0f0f0"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/fifteen"
                android:paddingRight="@dimen/fifteen"
                android:paddingTop="@dimen/five">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="会员卡号: " />

                <TextView
                    android:id="@+id/activity_integral_exchange_order_member_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fifteen"
                    android:minWidth="@dimen/fifty"
                    tools:background="#fff0f0f0"/>
            </LinearLayout>

            <Button
                android:id="@+id/activity_integral_exchange_order_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fifteen"
                android:background="@drawable/btn_bg"
                android:text="立即兑换"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
