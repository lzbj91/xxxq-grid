<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/main_customlist_item_bg"
    android:layout_marginRight="@dimen/fifteen"
    android:layout_marginLeft="@dimen/fifteen"
    android:padding="@dimen/padding_common">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/adapter_message_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:minWidth="@dimen/fifty"
                tools:background="#fff0f0f0"
                android:ellipsize="end"
                android:textSize="15sp"
                android:text="您有新的消息,请查收"
                android:layout_marginTop="@dimen/three"/>

            <TextView
                android:id="@+id/adapter_message_list_read"
                android:layout_width="@dimen/five"
                android:layout_height="@dimen/five"
                android:background="@drawable/message_not_read_shape"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/twenty"
                android:layout_marginTop="@dimen/three"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/adapter_message_list_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/three"
            android:lines="1"
            android:text="d1a32d13a2w1d32aw1daw21d32a1d3"
            android:ellipsize="end"
            android:textSize="12sp"
            tools:background="#fff0f0f0" />

        <TextView
            android:id="@+id/adapter_message_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textSize="10sp"
            android:text="2018年4月3日 17:36:32"
            android:layout_marginTop="@dimen/three"
            tools:background="#fff0f0f0" />

    </LinearLayout>

</LinearLayout>

