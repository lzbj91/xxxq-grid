<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/fifteen"
    android:layout_marginLeft="@dimen/fifteen"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/thirty"
        android:background="@mipmap/main_customlist_item_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/fifteen"
            android:orientation="vertical">

            <TextView
                android:id="@+id/adapter_supplier_detail_list_order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号: "
                android:minWidth="@dimen/fifty"
                tools:background="#fff0f0f0"
                android:textColor="#999999"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/adapter_supplier_detail_list_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/three"
                android:minWidth="@dimen/fifty"
                tools:background="#fff0f0f0"/>

            <TextView
                android:id="@+id/adapter_supplier_detail_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/three"
                android:paddingRight="@dimen/twenty"
                android:singleLine="true"
                android:ellipsize="end"
                android:minWidth="@dimen/fifty"
                tools:background="#fff0f0f0"/>

            <TextView
                android:id="@+id/adapter_supplier_detail_list_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/fifty"
                tools:background="#fff0f0f0"
                android:layout_marginTop="@dimen/three"
                android:textColor="#999999"
                android:textSize="12sp"/>

        </LinearLayout>
    </RelativeLayout>

    <com.example.administrator.view.AvatarImageView
        android:id="@+id/adapter_supplier_detail_list_avatar"
        android:layout_width="@dimen/sixty"
        android:layout_height="@dimen/sixty"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/home"
        tools:background="#fff0f0f0"/>

</RelativeLayout>
