<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.xxxq_grid.UserInfoActivity">

    <com.example.administrator.common.HeaderBar
        android:id="@+id/headerBar"
        android:layout_width="match_parent"
        android:layout_height="64dp">
    </com.example.administrator.common.HeaderBar>

    <!--头部信息-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ten"
        android:background="@mipmap/main_customlist_item_bg">

        <com.example.administrator.view.AvatarImageView
            android:id="@+id/activity_user_info_avatar"
            android:layout_width="@dimen/fifty"
            android:layout_height="@dimen/fifty"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="@dimen/ten"
            android:src="@drawable/home" />

        <TextView
            android:id="@+id/activity_user_info_name"
            android:layout_toRightOf="@id/activity_user_info_avatar"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginTop="@dimen/ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:minWidth="@dimen/fifty"
            tools:background="#fff0f0f0"/>

        <TextView
            android:id="@+id/activity_user_info_appellation"
            android:layout_toRightOf="@id/activity_user_info_name"
            android:layout_marginTop="@dimen/twelve"
            android:layout_marginLeft="@dimen/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="(辖区管理员)"/>

        <TextView
            android:id="@+id/activity_user_info_position"
            android:layout_toRightOf="@id/activity_user_info_avatar"
            android:layout_below="@id/activity_user_info_name"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#AAAAAA"
            android:minWidth="@dimen/fifty"
            tools:background="#fff0f0f0"/>

    </RelativeLayout>

    <!--列表信息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">
        <!--第一行-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/activity_user_info_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@id/activity_user_info_textView1"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:src="@drawable/name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/activity_user_info_1"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:layout_toEndOf="@+id/activity_user_info_1"
                android:layout_toRightOf="@+id/activity_user_info_1"
                android:text="姓名" />

            <TextView
                android:id="@+id/activity_user_info_textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"
                android:minWidth="@dimen/fifty"
                tools:background="#fff0f0f0" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:background="#FFCFCDCD"/>

        <!--第二行-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/activity_user_info_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@id/activity_user_info_textView2"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:src="@drawable/sex" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/activity_user_info_2"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:layout_toEndOf="@id/activity_user_info_2"
                android:layout_toRightOf="@id/activity_user_info_2"
                android:text="性别" />

            <TextView
                android:id="@+id/activity_user_info_textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"
                android:minWidth="@dimen/fifty"
                tools:background="#fff0f0f0" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:background="#FFCFCDCD"/>

        <!--第三行-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/activity_user_info_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@id/activity_user_info_textView3"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:src="@drawable/phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/activity_user_info_3"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:layout_toEndOf="@id/activity_user_info_3"
                android:layout_toRightOf="@id/activity_user_info_3"
                android:text="手机" />

            <TextView
                android:id="@+id/activity_user_info_textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"
                android:minWidth="@dimen/fifty"
                tools:background="#fff0f0f0" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:background="#FFCFCDCD"/>


        <!--第四行-->
        <RelativeLayout
            android:id="@+id/activity_user_info_relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/activity_user_info_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@id/activity_user_info_textView4"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:src="@drawable/grid" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/activity_user_info_4"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:layout_toEndOf="@id/activity_user_info_4"
                android:layout_toRightOf="@id/activity_user_info_4"
                android:text="网格" />

            <ImageView
                android:id="@+id/activity_user_info_textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"
                android:src="@drawable/right" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:background="#FFCFCDCD"/>


        <Button
            android:id="@+id/activity_user_info_logoutbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/fifteen"
            android:layout_marginLeft="@dimen/fifteen"
            android:layout_marginTop="@dimen/thirty"
            android:text="退出登录"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/btn_bg"/>

    </LinearLayout>

</LinearLayout>
